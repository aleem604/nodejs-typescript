
    <main>
        <form class="product-form" action="/admin/add-product" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="A Test Book Title">
            </div>
            <div class="form-control">
                <label for="price">Description</label>
                <textarea name="description" id="description" rows="5">A test book description to set as defult</textarea>
            </div>
            <div class="form-control">
                <label for="price">Price $</label>
                <input type="number" name="price" id="price" value="19.99" step="0.01">
            </div>
            <button type="submit">Add Product</button>
        </form>
    </main>

